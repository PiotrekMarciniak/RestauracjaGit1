@model Restauracja.Models.Rezerwacja
<h2>Rezerwacja Stolika</h2>
<form asp-action="ZapiszRezerwacje">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="DataRezerwacji">Data rezerwacji</label>
        <input asp-for="DataRezerwacji" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Imie">Imię</label>
        <input asp-for="Imie" class="form-control" />
    </div>

    <input type="submit" value="Zarezerwuj" class="btn btn-primary" />
</form>